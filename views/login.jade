extends default-layout

block content
	.container
		form.form-signin(method='POST', action='/wicked-admins/auth')
			h2.form-signin-heading Authentification
			input#inputUsername.form-control(type='text', name="username", placeholder='Usager', required='', autofocus='')
			input#inputPassword.form-control(type='password', name="password", placeholder='Mot de passe', required='')
			button.btn.btn-lg.btn-default.btn-block(type='submit') Connexion